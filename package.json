{
	"name": "alexa-mcp-server",
	"version": "1.0.0",
	"description": "Model Context Protocol server for controlling Amazon Alexa devices and smart home systems",
	"keywords": [
		"alexa",
		"mcp",
		"model-context-protocol",
		"langchain",
		"langgraph",
		"ai-agents",
		"smart-home",
		"iot",
		"hono",
		"nodejs"
	],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/gsampaio-rh/alexa-mcp-server.git"
	},
	"bugs": {
		"url": "https://github.com/gsampaio-rh/alexa-mcp-server/issues"
	},
	"homepage": "https://github.com/gsampaio-rh/alexa-mcp-server#readme",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"start": "tsx src/server.ts",
		"build": "tsc",
		"format": "biome format --write",
		"lint": "biome lint",
		"lint:fix": "biome lint --fix",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.9",
		"@modelcontextprotocol/sdk": "1.18.0",
		"agents": "0.1.4",
