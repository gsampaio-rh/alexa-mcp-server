		"hono": "^4.9.9",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/node": "^24.5.2",
		"tsx": "^4.21.0",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
